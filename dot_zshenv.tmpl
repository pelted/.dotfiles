# ============================================================================
# Environment Variables
# ============================================================================
# Loaded for ALL shell types (interactive, non-interactive, login, non-login)
# All exports belong here - keep .zshrc for interactive config only

# ----------------------------------------------------------------------------
# Locale
# ----------------------------------------------------------------------------
export LANG=en_US.UTF-8

# ----------------------------------------------------------------------------
# XDG Base Directory (standardized config locations)
# ----------------------------------------------------------------------------
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_CACHE_HOME="$HOME/.cache"

# ----------------------------------------------------------------------------
# Editor
# ----------------------------------------------------------------------------
export EDITOR="zed"
export VISUAL="$EDITOR"

# ----------------------------------------------------------------------------
# Homebrew
# ----------------------------------------------------------------------------
export HOMEBREW_NO_ANALYTICS=1
export HOMEBREW_NO_ENV_HINTS=1
export HOMEBREW_GITHUB_API_TOKEN="{{ onepasswordRead "op://Private/Github - Homebrew Token/token" }}"

# ----------------------------------------------------------------------------
# 1Password
# ----------------------------------------------------------------------------
export OP_ACCOUNT="${OP_ACCOUNT:-my.1password.com}"
export SSH_AUTH_SOCK=~/Library/Group\ Containers/2BUA8C4S2C.com.1password/t/agent.sock
# Secret reference used by `op run` to inject the real key at runtime.
# Update this item/field path to match your vault entry.
export OPENAI_API_KEY_OP_REFERENCE="op://Private/OpenAI API Key/credential"
export OPENAI_API_KEY="$OPENAI_API_KEY_OP_REFERENCE"

# ----------------------------------------------------------------------------
# PATH (centralized - don't add PATH in other .z* files)
# ----------------------------------------------------------------------------
# Order matters: earlier entries take precedence
# mise shims provide Ruby, Node, yarn, etc. to ALL shell contexts (scripts,
# tmux, overmind, etc.). Interactive shells also get `mise activate` in .zshrc
# which takes precedence over shims with directory-aware version switching.
export PATH="$HOME/.local/share/mise/shims:$HOME/.local/bin:$PATH"

# Add other custom paths below as needed:
# export PATH="$HOME/some/custom/path:$PATH"
